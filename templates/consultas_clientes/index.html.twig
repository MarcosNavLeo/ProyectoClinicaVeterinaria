{% extends 'base.html.twig' %}

{% block title %}
  Citas
{% endblock %}

{% block body %}
  <!-- slider section -->
  <section class="slider_section position-relative">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-4 offset-md-2">
                <div class="slider_detail-box">
                  <h1><span>¡Todas las consultas de tus mascotas!</span></h1>
                </div>
              </div>
              <div class="col-md-6">
                <div class="slider_img-box">
                  <img src="{{ asset('imagenes/slider-img.png') }}" alt="" />
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-4 offset-md-2">
                <div class="slider_detail-box">
                  <h1><span>¡Todas las consultas de tus mascotas!</span></h1>
                </div>
              </div>
              <div class="col-md-6">
                <div class="slider_img-box">
                  <img src="{{ asset('imagenes/slider-img.png') }}" alt="" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- end slider section -->

  <div class="container" style="margin-top:80px;">
    <div class="row">
      <div class="col-md-12">
        <div class="titlepage">
          <h2>Consultas</h2>
        </div>
        {# aqui una datatable para las consultas #}
        <table id="tabla" class="table table-striped table-bordered" style="width:100%">
          <thead>
            <tr>
              <th>Fecha y hora</th>
              <th>Mascota</th>
              <th>Diagnostico</th>
              <th>Tratamiento</th>
              <th>Medicamento</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
  {# modal para mostrar los detalles de la consulta #}
  <div class="modal fade" id="modal-consulta" tabindex="-1" role="dialog" aria-labelledby="modalConsultaLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalConsultaLabel">Detalles de la consulta</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
          <p>
            <strong>Fecha y hora:</strong> <span class="fecha-hora"></span>
          </p>
          <p>
            <strong>Diagnostico:</strong> <span class="diagnostico"></span>
          </p>
          <p>
            <strong>Mascota:</strong> <span class="mascota"></span>
          </p>
          <p>
            <strong>Nombre del tratamiento:</strong> <span class="tratamientos-nombre"></span>
          </p>
          <p>
            <strong>Duración del tratamiento:</strong> <span class="tratamientos-duracion"></span>
          </p>
          <p>
            <strong>Costo del tratamiento:</strong> <span class="tratamientos-costo"></span>
          </p>
          <p>
            <strong>Nombre del medicamento:</strong> <span class="medicamento-nombre"></span>
          </p>
          <p>
            <strong>Instrucciones del medicamento:</strong> <span class="medicamento-instrucciones"></span>
          </p>
          <p>
            <strong>Dosis del medicamento:</strong> <span class="medicamento-dosis"></span>
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

